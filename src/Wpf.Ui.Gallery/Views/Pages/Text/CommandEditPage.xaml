<Page
    x:Class="Wpf.Ui.Gallery.Views.Pages.Text.CommandEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Gallery.Views.Pages.Text"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:Wpf.Ui.Gallery.Helpers"
    Title="CommandEditPage"
    controls:PageControlDocumentation.DocumentationType="{x:Type ui:TextBox}"
    d:DataContext="{d:DesignInstance local:CommandEditPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:FirstWordConverter x:Key="FirstWordConverter" />
        <helpers:RestWordsConverter x:Key="RestWordsConverter" />
        <helpers:CommandOptionHeaderConverter x:Key="CommandOptionHeaderConverter" />
    </Page.Resources>

    <Grid Margin="0,0,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <controls:ControlExample
                Margin="0,0,0,0"
                HeaderText="标题."
                XamlCode="&lt;ui:TextBox PlaceholderText=&quot;...&quot; /&gt;"
                FontFamily="Source Han Sans SC">
                <controls:ControlExample.ExpanderHeader>
                    <MultiBinding Converter="{StaticResource CommandOptionHeaderConverter}">
                        <Binding ElementName="CmdRadio" Path="IsChecked" />
                        <Binding ElementName="PsRadio" Path="IsChecked" />
                        <Binding ElementName="BashRadio" Path="IsChecked" />
                    </MultiBinding>
                </controls:ControlExample.ExpanderHeader>

                <controls:ControlExample.ExpanderContent>
                    <StackPanel>
                        <RadioButton x:Name="CmdRadio" Content="CMD" IsChecked="True" />
                        <RadioButton x:Name="PsRadio" Content="PS" />
                        <RadioButton x:Name="BashRadio" Content="Bash" />
                    </StackPanel>
                </controls:ControlExample.ExpanderContent>

                <ui:TextBox
                    x:Name="TitleTextBox"
                    PlaceholderText="..."
                    Text="{Binding ViewModel.TitleText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CommandEditPage}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </controls:ControlExample>

            <controls:ControlExample
                Margin="0,36,0,0"
                HeaderText="命令."
                IsExpanderVisible="False"
                FontFamily="Source Han Sans SC">
                <ui:TextBox
                    x:Name="LiveTextBox"
                    PlaceholderText="..."
                    Text="{Binding ViewModel.CommandText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CommandEditPage}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            </controls:ControlExample>
            <controls:ControlExample Margin="0,0,0,0" IsExpanderVisible="False">
                <TextBlock
                    FontFamily="Comic Sans MS"
                    FontSize="18"
                    TextWrapping="Wrap"
                    FontWeight="Bold">
                    <Run
                        Text="{Binding ElementName=LiveTextBox, Path=Text, Converter={StaticResource FirstWordConverter}}"
                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                    <Run
                        Text="{Binding ElementName=LiveTextBox, Path=Text, Converter={StaticResource RestWordsConverter}}" />
                </TextBlock>
            </controls:ControlExample>
        </StackPanel>

        <ui:Button
            Grid.Row="1"
            Margin="0,16,0,0"
            Width="120"
            Appearance="Primary"
            Content="保存"
            HorizontalAlignment="Right"
            Command="{Binding ViewModel.SaveCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CommandEditPage}, Mode=OneWay}"
            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Mode=OneWay}" />

    </Grid>
</Page>

