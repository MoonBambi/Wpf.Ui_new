<Page
    x:Class="Wpf.Ui.Gallery.Views.Pages.Text.TextBoxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Gallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Gallery.Views.Pages.Text"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:Wpf.Ui.Gallery.Helpers"
    Title="TextBoxPage"
    controls:PageControlDocumentation.DocumentationType="{x:Type ui:TextBox}"
    d:DataContext="{d:DesignInstance local:TextBoxPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:FirstWordConverter x:Key="FirstWordConverter" />
        <helpers:RestWordsConverter x:Key="RestWordsConverter" />
        <helpers:CommandOptionHeaderConverter x:Key="CommandOptionHeaderConverter" />
    </Page.Resources>

    <Grid Margin="0,0,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Margin="0,0,0,0">
                <ui:TextBlock
                    Margin="0,0,0,8"
                    FontFamily="Source Han Sans SC"
                    FontSize="16"
                    FontWeight="Regular"
                    Foreground="#1F1F1F"
                    Text="标题" />
                <controls:ControlExample
                    Margin="0,0,0,0"
                    HeaderText="{x:Null}"
                    XamlCode="&lt;ui:TextBox PlaceholderText=&quot;...&quot; /&gt;"
                    FontFamily="Source Han Sans SC">
                    <controls:ControlExample.ExpanderHeader>
                        <MultiBinding Converter="{StaticResource CommandOptionHeaderConverter}">
                            <Binding ElementName="CmdRadio" Path="IsChecked" />
                            <Binding ElementName="PsRadio" Path="IsChecked" />
                            <Binding ElementName="BashRadio" Path="IsChecked" />
                        </MultiBinding>
                    </controls:ControlExample.ExpanderHeader>

                    <controls:ControlExample.ExpanderContent>
                        <StackPanel>
                            <RadioButton x:Name="CmdRadio" Content="CMD" IsChecked="True" />
                            <RadioButton x:Name="PsRadio" Content="PS" />
                            <RadioButton x:Name="BashRadio" Content="Bash" />
                        </StackPanel>
                    </controls:ControlExample.ExpanderContent>

                    <ui:TextBox
                        x:Name="TitleTextBox"
                        PlaceholderText="..."
                        Text="{Binding ViewModel.TitleText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:TextBoxPage}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </controls:ControlExample>
            </StackPanel>

            <StackPanel Margin="0,36,0,0">
                <ui:TextBlock
                    Margin="0,0,0,8"
                    FontFamily="Source Han Sans SC"
                    FontSize="16"
                    FontWeight="Regular"
                    Foreground="#1F1F1F"
                    Text="命令" />
                <controls:ControlExample
                    Margin="0,0,0,0"
                    HeaderText="{x:Null}"
                    IsExpanderVisible="False"
                    FontFamily="Source Han Sans SC">
                    <ui:TextBox
                        x:Name="LiveTextBox"
                        PlaceholderText="..."
                        Text="{Binding ViewModel.CommandText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:TextBoxPage}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </controls:ControlExample>
            </StackPanel>
             <controls:ControlExample
                Margin="0,0,0,0"
                IsExpanderVisible="False">
                <TextBlock FontFamily="Comic Sans MS" FontSize="18" TextWrapping="Wrap" FontWeight="Bold">
                    <Run
                        Text="{Binding ElementName=LiveTextBox, Path=Text, Converter={StaticResource FirstWordConverter}}"
                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                    <Run
                        Text="{Binding ElementName=LiveTextBox, Path=Text, Converter={StaticResource RestWordsConverter}}" />
                </TextBlock>
            </controls:ControlExample>
        </StackPanel>

        <ui:Button
            Grid.Row="1"
            Margin="0,16,0,0"
            Width="120"
            Appearance="Primary"
            Content="新增"
            HorizontalAlignment="Right"
            Command="{Binding ViewModel.AddEntryCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:TextBoxPage}, Mode=OneWay}"
            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Mode=OneWay}" />

    </Grid>
</Page>
